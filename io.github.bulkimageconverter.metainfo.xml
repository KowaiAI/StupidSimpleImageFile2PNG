<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.bulkimageconverter</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>
  <name>Bulk Image Converter</name>
  <summary>Convert images to PNG and strip metadata</summary>

  <description>
    <p>
      Bulk Image Converter is a simple application for converting multiple images to PNG format
      while automatically stripping all metadata (EXIF, XMP, IPTC) for privacy.
    </p>
    <p>Features:</p>
    <ul>
      <li>Bulk file selection for batch processing</li>
      <li>Automatic metadata removal for privacy</li>
      <li>Support for JPG, WebP, GIF, BMP, and TIFF formats</li>
      <li>Custom output folder selection</li>
      <li>Progress tracking with visual feedback</li>
    </ul>
  </description>

  <launchable type="desktop-id">io.github.bulkimageconverter.desktop</launchable>

  <url type="homepage">https://github.com/KowaiAI/StupidSimpleImageFile2PNG</url>
  <url type="bugtracker">https://github.com/KowaiAI/StupidSimpleImageFile2PNG/issues</url>

  <developer id="io.github.bulkimageconverter">
    <name>Bulk Image Converter Developers</name>
  </developer>

  <branding>
    <color type="primary" scheme_preference="light">#62a0ea</color>
    <color type="primary" scheme_preference="dark">#1c71d8</color>
  </branding>

  <content_rating type="oars-1.1" />

  <requires>
    <display_length compare="ge">360</display_length>
  </requires>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
  </supports>

  <releases>
    <release version="1.0.0" date="2026-01-21">
      <description>
        <p>Initial release with core features:</p>
        <ul>
          <li>Bulk image selection and conversion</li>
          <li>Metadata stripping for privacy</li>
          <li>Support for common image formats</li>
          <li>Modern Libadwaita interface</li>
        </ul>
      </description>
    </release>
  </releases>
</component>
